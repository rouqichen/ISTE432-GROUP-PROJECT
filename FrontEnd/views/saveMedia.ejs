<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>

    <% if(type == 'movie') { %>
    <form action="/library/saveMovie" method="POST" >
    <% } else { %>
    <form action="/library/saveShow" method="POST" >
    <% } %>

    <div class="form-field">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required>
    </div>

    <div class="form-field">
        <label for="location">Location Owned:</label>
        <input type="text" name="location" id="location" required>
    </div>

    <div class="form-field">
        <label for="genres">Genres (Comma Separated):</label>
        <input type="text" name="genres" id="genres" >
    </div>

    <div class="form-field">
        <label for="release">Release Date:</label>
        <input type="date" name="release" id="release" >
    </div>

    <div class="form-field">
        <label for="image">Image URL:</label>
        <input type="url" name="image" id="image" >
    </div>

    <div class="form-field">
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" >
    </div>

    <% if(type == 'movie') { %>
        <div class="form-field">
            <label for="mpaaRating">MPAA Rating:</label>
            <select name="mpaaRating" id="mpaaRating">
                <option value=""></option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NC-17">NC-17</option>
            </select>
        </div>

        <div class="form-field">
            <label for="runtime">Runtime (minutes):</label>
            <input type="number" name="runtime" id="runtime" >
        </div>
    <% } else { %>
        <div class="form-field">
            <label for="tvRating">Rating:</label>
            <select name="tvRating" id="tvRating">
                <option value=""></option>
                <option value="TV-Y">TV-Y</option>
                <option value="TV-Y7">TV-Y7</option>
                <option value="TV-G">TV-G</option>
                <option value="TV-PG">TV-PG</option>
                <option value="TV-14">TV-14</option>
                <option value="TV-MA">TV-MA</option>
            </select>
        </div>

        <div class="form-field">
            <label for="episodeLength">Episode Length:</label>
            <input type="number" name="episodeLength" id="episodeLength" >
        </div>
    <% } %>
    
    <input type="submit" name="submit" class="button" value="Submit" />

    </form>
  </body>
</html>
